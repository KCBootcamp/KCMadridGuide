<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="es.bhavishchandnani.kcmadridguide">

    <application
        android:name=".MadridGuideApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MadridGuideAppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.ShopsActivity">
        </activity>
        <activity android:name=".activity.ShopDetailActivity">
        </activity>

        <!-- Content provider -->
        <provider
            android:name=".manager.db.provider.MadridGuideProvider"
            android:authorities="es.bhavishchandnani.kcmadridguide.provider"/>

        <activity android:name=".activity.MadridActivitiesActivity">
        </activity>
        <activity android:name=".activity.MadridActivityDetailActivity">
        </activity>
    </application>

</manifest>